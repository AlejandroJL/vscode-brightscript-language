// A launch configuration that compiles the extension and then opens it inside a new window
{
    "version": "0.1.0",
    "configurations": [
        {
            "name": "Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceRoot}"
            ],
            "stopOnEntry": false,
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/out/src/**/*.js"
            ],
            "preLaunchTask": "npm"
        },
        {
            "name": "Server",
            "stopOnEntry": false,
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/src/debugger.ts",
            "args": [
                "--server=4711"
            ],
            "outFiles": [
                "${workspaceRoot}/out/src/debugger.js"
            ]
        },
        {
            "preLaunchTask": "compile",
            "request": "launch",
            "smartStep": true,
            "name": "Test",
            "type": "node",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": [
                "out/debugger.spec.js"
            ],
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": null,
            "env": {
                "NODE_ENV": "production"
            }
        }
    ],
    "compounds": [
        {
            "name": "Extension + Server",
            "configurations": [
                "Extension",
                "Server"
            ]
        }
    ]
}